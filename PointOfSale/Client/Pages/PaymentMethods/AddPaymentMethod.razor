@page "/AddPaymentMethod"
<RadzenContent @ref="content1" Container="main">
    <ChildContent>
        <div class="row">
            <div class="col-md-12">
                <RadzenTemplateForm @ref="form0" Data="@(paymentmethod)" Visible="@(paymentmethod != null)" TItem="PaymentMethod" Submit="@Form0Submit">
                    <ChildContent>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel @ref="label1" Text="Mehtod Name" Component="MehtodName" style="width: 100%">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenTextBox  @bind-Value="paymentmethod.MehtodName" style="width: 100%" Name="MehtodName">
                                </RadzenTextBox>
                            </div>
                        </div>
                        <div style="margin-bottom: 1rem" class="row">
                            <div class="col-md-3">
                                <RadzenLabel @ref="label2" Text="Cash" Component="Cash" style="width: 100%">
                                </RadzenLabel>
                            </div>
                            <div class="col-md-9">
                                <RadzenCheckBox @bind-Value="paymentmethod.Cash" TValue="bool" style="display: block" Name="Cash">
                                </RadzenCheckBox>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col offset-sm-3">
                                <RadzenButton @ref="button1" ButtonType="Radzen.ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="Radzen.ButtonStyle.Primary">
                                </RadzenButton>
                                <RadzenButton @ref="button2" ButtonStyle="Radzen.ButtonStyle.Light" Text="Cancel" Click="@Button2Click">
                                </RadzenButton>
                            </div>
                        </div>
                    </ChildContent>
                </RadzenTemplateForm>
            </div>
        </div>
    </ChildContent>
</RadzenContent>