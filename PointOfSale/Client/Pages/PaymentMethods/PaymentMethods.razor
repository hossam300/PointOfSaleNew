@page "/PaymentMethods"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Resource.PaymentMethods.PaymentMethods> Loc
@inject Microsoft.Extensions.Localization.IStringLocalizer<PointOfSale.DAL.Resources.Resources> Loc2
    <!--begin::Subheader-->
<div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
    <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-2 mr-5">@Loc["PaymentMethod"]</h5>
                <!--end::Page Title-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-body p-9">
                <div class="row">
                    <div class="col-md-12">
                        <RadzenContent @ref="content1" Container="main" Style="direction:rtl;text-align:right">
                            <ChildContent>
                                <RadzenHeading @ref="pageTitle" Size="H1" Text="@Loc["PaymentMethod"]">
                                </RadzenHeading>
                                <div class="row">
                                    <div class="col-md-12">
                                        <RadzenButton @ref="button0" Icon="add_circle_outline" style="margin-bottom: 10px" Text="@Loc["Add"]" Click="@Button0Click">
                                        </RadzenButton>
                                        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getPaymentMethodsResult)" TItem="PaymentMethod">
                                            <Columns>
                                                <RadzenGridColumn TItem="PaymentMethod" Context="paymentMethod" Property="Id" Visible="false" Title="Id" Type="integer">
                                                </RadzenGridColumn>
                                                <RadzenGridColumn TItem="PaymentMethod" Context="paymentMethod" Property="MehtodName" Title="@Loc2["MehtodName"]" Type="string">
                                                </RadzenGridColumn>
                                                <RadzenGridColumn TItem="PaymentMethod" Context="paymentMethod" Property="Cash" Title="@Loc2["Cash"]" Type="boolean">
                                                </RadzenGridColumn>
                                                <RadzenGridColumn TItem="PaymentMethod" Context="paymentMethod" Bubble="false" Filterable="false" Sortable="false" TextAlign="Radzen.TextAlign.Center" Width="100px">
                                                    <Template Context="paymentMethod">
                                                        <RadzenButton Icon="edit" Size="Radzen.ButtonSize.Small" Click="@(args => EditRow(paymentMethod))">
                                                        </RadzenButton>
                                                    </Template>
                                                </RadzenGridColumn>
                                                <RadzenGridColumn TItem="PaymentMethod" Context="paymentMethod" Filterable="false" Sortable="false" Bubble="false" Width="70px">
                                                    <Template Context="paymentMethod">
                                                        <RadzenButton @ref="gridDeleteButton" ButtonStyle="Radzen.ButtonStyle.Danger" Icon="close" Size="Radzen.ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, paymentMethod))">
                                                        </RadzenButton>
                                                    </Template>
                                                </RadzenGridColumn>
                                            </Columns>
                                        </RadzenGrid>
                                    </div>
                                </div>
                            </ChildContent>
                        </RadzenContent>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>